= provide(:title, "Home")
- @article_categories.each do |article_category|
  - recent_articles = article_category.recent_articles
  - unless recent_articles.empty?
    - recent_articles.each do |article|
      %article.article-cell
        %h3
          %a{:href => article_category_path(article_category) }
            = article_category.name
        %p
          %a{:href => "#"}
            = image_tag article.image.to_s, class: "aws-image", alt: "Caption Photo For Article; #{article.title}"
        %section.section
          %h3
            %a{:href => "#"}
              = article.title
          != article.introduction