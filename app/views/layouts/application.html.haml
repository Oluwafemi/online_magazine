          %li.contact-email
            contextfree9@gmail.com
      .social
        %small.copyright
          Copyright Seed International Magazine #{Date.today.year}
        %ul
          %li.social-dribble
            %a{:href => "#"} Dribble
          %li.social-facebook
            %a{:href => "#"} Facebook
